<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AboutUsFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="413dp"
        android:layout_height="72dp"
        android:background="#7C7B7B"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1dp"
        tools:ignore="DuplicateIds,MissingConstraints" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="About Us"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView24"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="657dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView24">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="371dp"
                android:layout_height="62dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:text="Welcome to Drug Panda,your one-stop solution for all your healthcare needs."
                android:textSize="21dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="371dp"
                android:layout_height="153dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="88dp"
                android:text="At Drug Panda, we believe in making healthcare accessible and convenient for everyone. Our app, developed by Iris Tech, is designed to provide a seamless experience for managing your health and wellness."
                android:textSize="21dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="371dp"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="265dp"
                android:text="Features of Drug Panda:"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="371dp"
                android:layout_height="200dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="1. Ask Doctor - Connect with Healthcare Experts. Our 'Ask Doctor' feature connects you with healthcare experts who can provide advice and guidance. Get it addressed by professionals. Our 'Ask Doctor' feature connects you with healthcare experts who can provide advice and guidance."
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="371dp"
                android:layout_height="150dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="2. Medicine - Explore a wide range of medicines available for purchase. We offer a wide range of medicines available for purchase right from the app. From Vitamin C to Multivitamins, we've got you covered."
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="371dp"
                android:layout_height="130dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="3. Lab Test - Need to get a lab test done? Schedule it through our app. We partner with certified labs to ensure you get accurate and reliable results."
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="371dp"
                android:layout_height="180dp"
                android:layout_marginStart="15dp"
                android:text="Our team at Iris Tech is committed to providing a secure and user-friendly platform for our users. We prioritize the privacy and security of our users and have implemented robust security measures to ensure your information is safe with us."
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="371dp"
                android:layout_height="130dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="We are always looking for ways to improve and welcome feedback from our users. If you have any suggestions or questions, please don't hesitate to contact us at [Your Contact Information]."
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="371dp"
                android:layout_height="330dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Thank you for choosing Drug Panda. Together, let's make healthcare management easier for everyone."
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>